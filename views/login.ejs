<%- include("partials/header") %>

    <div class="container">
        <div class="jumbotron" id="nopad">
            <div class="container header">
                <div class="row">
                    <h2 style="text-align: center;">Login!</h2>
                    <div style="width: 30%; margin: 30px auto;">
                        
                        <form action="/login" method="POST">
                            <div class="form-group">
                                <input class="form-control" type="text" name="username" placeholder="Enter Username" >
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="password" name="password" placeholder="Enter Password" >
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-lg btn-block">Sign In!</button>
                            </div> 
                            <div class="form-group">
                                <a class="btn btn-xs btn-warning" href="/forgot">Forgot Password!</a>
                            </div> 
                            <div class="form-group">
                                <a class="btn btn-primary pull-right" href="/register">Sign up!</a>
                            </div> 
                        </form>
                        <a class="btn btn-primary" href="/cars">Home page</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    

<%- include("partials/footer") %>
